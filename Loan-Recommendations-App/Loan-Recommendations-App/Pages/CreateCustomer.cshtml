@page
@model CreateCustomer
@using Loan_Recommendations_App.Data

<form method="post">
    @Html.AntiForgeryToken()
 
    <div class="card mb-4">
        <div class="card-body">
            <h2 class="mb-4">@Labels.CreateCustomer</h2>
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="IsSouthAfricanCitizen" class="form-label"></label>
                        <div class="form-check form-switch">
                            <input asp-for="IsSouthAfricanCitizen" class="form-check-input" type="checkbox" role="checkbox">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label><span>*</span>
                        <input asp-for="Name" type="text" class="form-control" autocomplete="off" >
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label><span>*</span>
                        <input asp-for="Email" type="text" class="form-control" autocomplete="off">
                        <span asp-validation-for="Email" class="text-danger" ></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label><span>*</span>
                        <input asp-for="PhoneNumber" type="number" class="form-control" autocomplete="off">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="AlternatePhoneNumber" class="form-label"></label><span>*</span>
                        <input asp-for="AlternatePhoneNumber" type="number" class="form-control" autocomplete="off">
                        <span asp-validation-for="AlternatePhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label><span>*</span>
                        <input asp-for="Address" type="text" class="form-control" autocomplete="off">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label><span>*</span>
                        <input asp-for="DateOfBirth" type="date" class="form-control" autocomplete="off">
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="IdNumber" class="form-label"></label><span>*</span>
                        <input asp-for="IdNumber" type="text" class="form-control" autocomplete="off">
                        <span asp-validation-for="IdNumber" class="text-danger"></span>
                    </div>
                </div>
                 <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="Gender" class="form-label ms-0 mb-0"></label><span>*</span>
                        <select class="form-control" asp-for="Gender" asp-items="Model.GenderList">
                            <option disabled value="" selected></option>
                        </select>
                        <input asp-for="Gender" type="hidden" class="form-control" autocomplete="off">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="JobTitle" class="form-label"></label><span>*</span>
                        <input asp-for="JobTitle" type="text" class="form-control" autocomplete="off">
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="Employer" class="form-label"></label><span>*</span>
                        <input asp-for="Employer" type="text" class="form-control" autocomplete="off">
                        <span asp-validation-for="Employer" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label asp-for="Income" class="form-label"></label><span>*</span>
                        <input asp-for="Income" type="number" class="form-control" autocomplete="off">
                        <span asp-validation-for="Income" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-lg-center py-3 flex-column flex-lg-row">
                <button type="submit" class="w-100 btn btn-lg btn-outline-primary">Submit</button>
            </div>
        </div>
    </div>

</form>

